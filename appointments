#String#

#Algumas caracteres podem causar problema numa string
# [errado] frase = "That's my girl!"
#That's vai dar problema, o correto é colocar um \ antes do '
# [correto] frase = "That\'s my girl!"

#Acess by index

fifth_letter = "MONTY"[4]
print fifth_letter
# print: Y

#Função len

#informa o tamanho da string
parrot = "Norwegian Blue"
print len(parrot)
# print: 14

#Função lower and upper

#lower transforma tudo em minúsculo
#upper transforma tudo em maiúsculo
parrot = "Norwegian Blue"
print parrot.lower()
# print: norwegian blue
parrot = "Norwegian Blue"
print parrot.upper()
# print: NORWEGIAN BLUE

